<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C7B8B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.keven.widget.WaveView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:amplitude="60"
            app:quadrant="0.5"
            app:speed="0.04"/>

        <fragment
            android:id="@+id/fragmentWave1"
            android:name="com.keven.widget.activity.Wave1Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:id="@+id/fragmentWave2"
            android:name="com.keven.widget.activity.Wave2Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:id="@+id/fragmentWave3"
            android:name="com.keven.widget.activity.Wave3Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
